{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Dew",
  "scopeName": "source.dew",
  "patterns": [
    { "include": "#comments" },
    { "include": "#keywords" },
    { "include": "#constants" },
    { "include": "#numbers" },
    { "include": "#operators" },
    { "include": "#functions" },
    { "include": "#variables" },
    { "include": "#punctuation" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.dew",
          "match": "//.*$"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.conditional.dew",
          "match": "\\b(if|then|else)\\b"
        },
        {
          "name": "keyword.operator.logical.dew",
          "match": "\\b(and|or|not)\\b"
        }
      ]
    },
    "constants": {
      "patterns": [
        {
          "name": "constant.language.boolean.dew",
          "match": "\\b(true|false)\\b"
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.float.dew",
          "match": "\\b\\d+\\.\\d*([eE][+-]?\\d+)?\\b|\\b\\d*\\.\\d+([eE][+-]?\\d+)?\\b|\\b\\d+[eE][+-]?\\d+\\b"
        },
        {
          "name": "constant.numeric.integer.dew",
          "match": "\\b\\d+\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.comparison.dew",
          "match": "<=|>=|==|!=|<|>"
        },
        {
          "name": "keyword.operator.arithmetic.dew",
          "match": "\\+|-|\\*|/|\\^|%"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "meta.function-call.dew",
          "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*(\\()",
          "captures": {
            "1": { "name": "entity.name.function.dew" },
            "2": { "name": "punctuation.definition.arguments.begin.dew" }
          }
        }
      ]
    },
    "variables": {
      "patterns": [
        {
          "name": "variable.other.dew",
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
        }
      ]
    },
    "punctuation": {
      "patterns": [
        {
          "name": "punctuation.definition.arguments.end.dew",
          "match": "\\)"
        },
        {
          "name": "punctuation.separator.arguments.dew",
          "match": ","
        },
        {
          "name": "punctuation.definition.group.begin.dew",
          "match": "\\("
        }
      ]
    }
  }
}
